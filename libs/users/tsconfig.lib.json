{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "target": "es2015",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": [],
        "lib": ["dom", "es2018"],
        "strictPropertyInitialization": false
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true,
        "strictPropertyInitialization": false
    },
    "exclude": ["src/test-setup.ts", "**/*.spec.ts"],
    "include": ["**/*.ts"]
}
